@model IEnumerable<jobsity.Repository.User>

@{
    ViewBag.Title = "Index";
}

<h4>Users</h4>

<p>
@Html.ActionLink("Add New", "Create",new { },new {Class="btn btn-outline-primary" })
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Role
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit",new { id=item.IdUser},new {Class="btn btn-outline-primary" })
        </td>
    </tr>
}

</table>
